%table.table.table-striped.table-hover
  %thead.table-dark
    %tr
      %th First name
      %th Last name
      %th Email
      %th Phone
      %th Twitter
      %th Department
      %th Gender
      %th{:colspan => "3"}
  %tbody
    - @friends.each do |friend|
      %tr
        %td= friend.first_name
        %td= friend.last_name
        %td= friend.email
        %td= friend.phone
        %td= friend.twitter
        %td= friend.department
        %td= friend.gender
        %td= link_to 'Show', friend
        %td= link_to 'Edit', edit_friend_path(friend)
        %td= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'Add New Friend', new_friend_path, class: "btn btn-secondary"
= params.inspect
